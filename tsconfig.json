{
  "compilerOptions": {
    "outDir": "dist",
    "lib": ["ESNext", "DOM"],
    "target": "ES5",
    "module": "ESNext",
    "rootDir": "src",
    "jsx": "react-jsx",
    "composite": true,
    "esModuleInterop": true,
    "declaration": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declarationDir": "dist/types",
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "rollup.config.ts", "node_modules/@types"]
}

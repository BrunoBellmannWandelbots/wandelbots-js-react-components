{
  "compilerOptions": {
    "rootDir": "src",
    "jsx": "react-jsx",
    "composite": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "declaration": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declarationDir": "dist/types"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.json",
    "src/**/*.svg",
    "rollup.config.mjs",
    "rollup.config.dev.mjs",
    "node_modules/@types"
  ]
}
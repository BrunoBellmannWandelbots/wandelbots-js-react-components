{
  "compilerOptions": {
    "outDir": "dist",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "rootDir": "src",
    "jsx": "react-jsx",
    "composite": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.json",
    "src/**/*.svg",
    "rollup.config.ts"
  ]
}